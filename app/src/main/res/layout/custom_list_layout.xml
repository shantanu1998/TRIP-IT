<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="10dp"
      android:layout_margin="5dp"
    android:background="@drawable/list_shape"
      android:layout_marginBottom="10dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">


          <ImageView
              android:id="@+id/imgview"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:padding="5dp"/>

              />
          
          <TextView
              android:id="@+id/homestay_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/imgview"
              android:layout_marginLeft="20dp"
              android:text="Royal Homestay"
              android:textStyle="bold"
              android:textColor="#000"
              android:textSize="20sp"/>



     <ImageView
         android:id="@+id/star"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/star"
         android:layout_toRightOf="@id/imgview"
         android:layout_below="@+id/homestay_name"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="10dp"/>



          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/star"
              android:layout_toRightOf="@id/imgview"
              android:layout_below="@+id/homestay_name"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="10dp"/>

          <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/star"
          android:layout_toRightOf="@id/imgview"
          android:layout_below="@+id/homestay_name"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="10dp"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/star"
              android:layout_toRightOf="@id/imgview"
              android:layout_below="@+id/homestay_name"
              android:layout_marginLeft="80dp"
              android:layout_marginTop="10dp"/>


          <TextView
              android:id="@+id/location"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Near Dandi Beach"
              android:layout_below="@+id/star"
              android:layout_toRightOf="@+id/imgview"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
              android:drawableLeft="@drawable/location"/>

          <TextView
              android:id="@+id/type_room"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Deluxe Double Room"
              android:layout_below="@+id/location"
              android:layout_alignParentRight="true"
              android:layout_marginTop="15dp"/>


          <TextView
              android:id="@+id/price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="999"
              android:textColor="#000"
              android:layout_below="@+id/type_room"
              android:textStyle="bold"
              android:layout_alignParentRight="true"
              android:layout_marginTop="10dp"
              android:textSize="20sp"
              android:drawableLeft="@drawable/rupee"/>















      </RelativeLayout>














  </androidx.cardview.widget.CardView>
</LinearLayout>