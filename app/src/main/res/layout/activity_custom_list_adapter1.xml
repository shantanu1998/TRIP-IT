<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomListAdapter1">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/list_shape"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"/>
            />

            <TextView
                android:id="@+id/homestay_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgview"
                android:layout_marginLeft="20dp"
                android:text="Royal Homestay"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp"/>






            <TextView
                android:id="@+id/location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Near Dandi Beach"
                android:layout_below="@+id/homestay_name1"
                android:layout_toRightOf="@+id/imgview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/location"/>



            <TextView
                android:id="@+id/CheckIn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:layout_toRightOf="@+id/imgview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_below="@+id/location1"/>

            <TextView
                android:id="@+id/CheckInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:hint="DD/MM/YYYY"
                android:layout_toRightOf="@+id/imgview"
                android:layout_below="@+id/CheckIn2" />

            <TextView
                android:id="@+id/CheckOut2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:layout_toRightOf="@id/CheckIn2"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/location1"/>

            <TextView
                android:id="@+id/CheckOutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:hint="DD/MM/YYYY"
                android:layout_toRightOf="@+id/CheckInDate"
                android:layout_below="@+id/CheckOut2"
                />

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textColor="#000"
                android:layout_below="@+id/CheckOutDate"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:drawableLeft="@drawable/rupee"/>















        </RelativeLayout>














    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNav"

            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation"
            android:background="@drawable/round"

            />
    </LinearLayout>


</LinearLayout>